[Unit]
Description=parabens.vc web service
After=network.target

[Service]
Type=simple
User=parabens
Group=parabens
WorkingDirectory=/opt/parabens.vc
EnvironmentFile=/etc/parabens-vc.env
ExecStart=/usr/local/bin/parabens-vc
Restart=on-failure
RestartSec=3
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/parabens.vc /var/cache/parabens.vc

[Install]
WantedBy=multi-user.target
